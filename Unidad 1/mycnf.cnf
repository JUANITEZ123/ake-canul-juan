[mysqld]

max_connections = 200
wait_timeout = 300


innodb_buffer_pool_size = 512M


log_output = FILE


general_log = ON
general_log_file = /var/lib/mysql/general.log


slow_query_log = ON
long_query_time = 2
slow_query_log_file = /var/lib/mysql/slow.log


character-set-server = utf8mb4
collation-server      = utf8mb4_unicode_ci


skip_name_resolve = 1
